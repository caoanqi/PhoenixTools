<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_usb_socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB SOCKET"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="46dp" />

            <Button
                android:id="@+id/bt_qunee"
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:text="Qunee 拓扑图"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="108dp" />

            <Button
                android:id="@+id/bt_sqlite"
                android:layout_width="122dp"
                android:layout_height="45dp"
                android:text="sqlite操作"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="184dp" />

            <Button
                android:id="@+id/bt_expand_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand_list_view"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="252dp" />

            <Button
                android:id="@+id/bt_recycler_view_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recyclerview 分级显示"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="326dp" />

            <Button
                android:id="@+id/bt_recycler_view_swip_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reyclerView侧滑删除"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="400dp" />

            <Button
                android:id="@+id/bt_custom_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义签字"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="478dp" />

            <Button
                android:id="@+id/bt_update_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apk升级"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="555dp" />

            <Button
                android:id="@+id/bt_nav_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="侧滑菜单"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="555dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>