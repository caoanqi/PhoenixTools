<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LineItemView">
        <attr name="li_text" format="string|reference" />
        <attr name="li_name" format="string|reference" />
        <attr name="li_left_icon" format="reference" />
        <attr name="li_right_icon" format="reference" />
        <attr name="li_left_right_padding" format="dimension" />
        <attr name="li_bottom_line_size" format="dimension" />
        <attr name="li_bottom_line_color" format="color" />
    </declare-styleable>
    <!--通用属性-->
    <attr name="button_bg" format="reference|color" />
    <attr name="activity_bg" format="reference|color" />
    <attr name="nav_bg" format="reference|color" />
    <attr name="text_bg" format="reference|color" />
    <attr name="text_font_color" format="reference|color" />
    <attr name="button_font_color" format="reference|color" />

    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringBgColor" format="color"/>
    </declare-styleable>
</resources>